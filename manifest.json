{
  "manifest_version": 2,
  "name": "Sort Tabs",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "sort-tabs@mozilla.org"
    }
  },
  "browser_action": {
      "default_title": "Sort tabs"
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "permissions": [
      "tabs"
  ]
}
